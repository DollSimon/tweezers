"""
Gui definition for the viewing and changing the settings file.
"""

from enaml.layout.api import vertical, horizontal, align, spacer, vbox
from enaml.widgets.api import (
    Window, Label, Field, Form, DateSelector, CheckBox, GroupBox, Container,
    PushButton
)

enamldef VariableForm(Form):
    attr variable

    Label:
        text = "{}".format(variable.name)
    Field:
        text := variable.value


enamldef SettingsView(Window): main:
    attr settings
